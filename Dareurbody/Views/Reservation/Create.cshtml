@model Dareurbody.Models.Reservation

@{
    ViewBag.Title = "Create";
}


<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Reservation</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.emp_id, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.emp_id)
                @Html.ValidationMessageFor(model => model.emp_id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.start_date, new { @class = "control-label col-md-2" })
            <div class="col-md-10"> 
                @Html.TextBoxFor(model => model.start_date, new { type = "datetime-local" })
               <span style="color:red"> office Hours form 9 am to 6 pm ,after current time </span> 
                @*@Html.EditorFor(model => model.start_date, new { @class = "form-control datepicker", placeholder = "Enter Drop-off date here..." })*@
                @Html.ValidationMessageFor(model => model.start_date )
            </div>   
        </div>
       
        <div class="form-group">
            @Html.LabelFor(model => model.Duration, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Duration)
                @Html.ValidationMessageFor(model => model.Duration)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Request_sub_time, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Request_sub_time, "{0:d/M/yyyy HH:mm:ss}", new { @type = "datetime", @readonly = "readonly", disabled=true })
                @Html.ValidationMessageFor(model => model.Request_sub_time)
            </div>
        </div>
       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
    </div>

  <h1 style="color:red">
        @Html.Label("", Convert.ToString((string)ViewBag.Notic))
   </h1>
}


